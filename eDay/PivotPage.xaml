<Page
    x:Class="eDay.PivotPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:eDay"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:eDay.Data"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <!--<JumpListItemBackgroundConverter x:Key="JumpListItemBackgroundConverter"/>-->
        <local:DoubleToBool x:Key="DoubleToBool"/>
    </Page.Resources>
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <CommonNavigationTransitionInfo IsStaggeringEnabled="True"/>
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>
    <Grid   d:DataContext="{Binding events, 
            Source={d:DesignData Source=/DataModel/eDayData.json,IsDesignTimeCreatable=True,
                               Type = data:eDayDataSource}}"  
>
        <Pivot x:Uid="Pivot" Title="EVERYDAY" x:Name="pivot"
               CommonNavigationTransitionInfo.IsStaggerElement="True" 
               Margin="0" ItemsSource="{Binding}" BorderThickness="0"
               >
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="26" Text="{Binding Day, Mode=OneWay}" Margin="0,5,0,0"/>
                        <TextBlock FontSize="24" Text="{Binding Date, Mode=OneWay}"/>
                    </StackPanel>
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <Pivot.ItemTemplate>
                <DataTemplate>
                    <GridView x:Name="gridView" 
                        HorizontalAlignment="Center"
                        VerticalContentAlignment="Stretch" 
                        ItemsSource="{Binding eventsByDay}"
                        ItemClick="GridView_ItemClick" IsItemClickEnabled="True" FontSize="18.667" Background="Black" 
                                                      >
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="Auto">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.ColumnSpan="2"/>
                                    <StackPanel Width="Auto" Height="Auto" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Background="Black">
                                        <TextBlock TextWrapping="Wrap"
                                                Pivot.SlideInAnimationGroup="1"
                                                CommonNavigationTransitionInfo.IsStaggerElement="True"
                                                Style="{ThemeResource ListViewItemTextBlockStyle}"
                                                Margin="0" FontSize="24" HorizontalAlignment="Left"
                                                Text="{Binding time}" RenderTransformOrigin="0.491,0.57" FontWeight="Bold">
                                            <TextBlock.Foreground>
                                                <SolidColorBrush Color="{ThemeResource PhoneTextHighColor}"/>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                            <TextBlock
                                                Pivot.SlideInAnimationGroup="1"
                                                CommonNavigationTransitionInfo.IsStaggerElement="True"
                                                Style="{ThemeResource ListViewItemTextBlockStyle}"
                                                Margin="0" FontSize="18"
                                                Text="{Binding event_name}" 
                                                FontWeight="Bold" 
                                                TextTrimming="None" TextAlignment="Center" 
                                                Width="Auto"
                                                TextWrapping="WrapWholeWords"
                                                HorizontalAlignment="Left">
                                                <TextBlock.Foreground>
                                                    <SolidColorBrush Color="{ThemeResource PhoneTextHighColor}"/>
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                    </StackPanel>
                                    <Image x:Name="image" Margin="0"
                                       d:LayoutOverrides="LeftPosition, 
                                           RightPosition" Width="60" Height="60"
                                           Stretch="UniformToFill"
                                           Source="{Binding img.path}"/>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </DataTemplate>
            </Pivot.ItemTemplate>


